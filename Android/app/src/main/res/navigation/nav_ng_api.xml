<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_ng_api"
            app:startDestination="@id/listFragment">
    DO REMEMBER
    Navigation parse these file when launching
    And our APP depends on its result
    So make sure you

    <fragment
            android:id="@+id/listFragment"
            tools:layout="@layout/fragment_list"
            android:name="io.agora.ng_api.ui.fragment.ListFragment"
            android:label="@string/app_name">
        <action
                android:id="@+id/action_listFragment_to_descriptionFragment"
                app:enterAnim="@anim/slide_in_right"
                app:popEnterAnim="@anim/slide_in_left"
                app:exitAnim="@anim/slide_out_left"
                app:popExitAnim="@anim/slide_out_right"
                app:destination="@id/descriptionFragment"/>
    </fragment>
    <fragment
            tools:layout="@layout/fragment_description"
            android:id="@+id/descriptionFragment"
            android:name="io.agora.ng_api.ui.fragment.DescriptionFragment"
            android:label="DescriptionFragment">
        <action
                android:id="@+id/action_descriptionFragment_to_joinChannelVideo"
                app:destination="@id/joinChannelVideo"/>
        <action
                android:id="@+id/action_descriptionFragment_to_joinChannelAudio"
                app:destination="@id/joinChannelAudio"/>
        <action
                android:id="@+id/action_descriptionFragment_to_mediaPlayer"
                app:destination="@id/mediaPlayer"/>
        <action
                android:id="@+id/action_descriptionFragment_to_screenShareFragment"
                app:destination="@id/screenShareFragment" />
    </fragment>

    <fragment
            tools:layout="@layout/fragment_media_player"
            android:id="@+id/mediaPlayer"
            android:name="io.agora.ng_api.ui.fragment.MediaPlayerFragment"
            android:label="@string/title_media_player">
        <argument
                android:name="@string/args_nav_type"
                app:argType="integer"
                android:defaultValue="1"/>
        <argument
            android:name="@string/args_nav_permission"
            app:argType="integer"
            android:defaultValue="0x03"/>
        <argument
                android:name="@string/args_nav_desc"
                app:argType="reference"
                android:defaultValue="@string/desc_media_player"/>
    </fragment>
    <fragment
            tools:layout="@layout/fragment_join_channel_video"
            android:id="@+id/joinChannelVideo"
            android:name="io.agora.ng_api.ui.fragment.JoinChannelVideoFragment"
            android:label="@string/title_join_channel_video">
        <argument
                android:name="@string/args_nav_type"
                app:argType="integer"
                android:defaultValue="0"/>
        <argument
            android:name="@string/args_nav_permission"
            app:argType="integer"
            android:defaultValue="0x03"/>
        <argument
                android:name="@string/args_nav_desc"
                app:argType="reference"
                android:defaultValue="@string/desc_join_channel_video"/>
    </fragment>
    <fragment
            tools:layout="@layout/fragment_join_channel_audio"
            android:id="@+id/joinChannelAudio"
            android:name="io.agora.ng_api.ui.fragment.JoinChannelAudioFragment"
            android:label="@string/title_join_channel_audio">
        <argument
                android:name="@string/args_nav_type"
                app:argType="integer"
                android:defaultValue="0"/>
        <argument
                android:name="@string/args_nav_permission"
                app:argType="integer"
                android:defaultValue="0x01"/>
        <argument
                android:name="@string/args_nav_desc"
                app:argType="reference"
                android:defaultValue="@string/desc_join_channel_audio"/>
    </fragment>
    <fragment
            android:id="@+id/screenShareFragment"
            tools:layout="@layout/fragment_screen_share"
            android:name="io.agora.ng_api.ui.fragment.ScreenShareFragment"
            android:label="@string/title_screen_share" >
        <argument
                android:name="@string/args_nav_type"
                app:argType="integer"
                android:defaultValue="1"/>
        <argument
                android:name="@string/args_nav_permission"
                app:argType="integer"
                android:defaultValue="0x03"/>
        <argument
                android:name="@string/args_nav_desc"
                app:argType="reference"
                android:defaultValue="@string/desc_screen_share"/>
    </fragment>
</navigation>