<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_ng_api"
            app:startDestination="@id/listFragment">

<!--    Navigation NavGraph#mNodes holds all these NavDestinations-->
<!--    Order by its id value size-->
<!--    And id value size is generated by AAPT according to its character order-->
<!--    So a id names "a",its value maybe 1, while "b" maybe 2-->
    <fragment
            android:id="@+id/listFragment"
            tools:layout="@layout/fragment_list"
            android:name="io.agora.ng_api.ui.fragment.ListFragment"
            android:label="@string/app_name">
        <action
                android:id="@+id/action_listFragment_to_descriptionFragment"
                app:enterAnim="@anim/slide_in_right"
                app:popEnterAnim="@anim/slide_in_left"
                app:exitAnim="@anim/slide_out_left"
                app:popExitAnim="@anim/slide_out_right"
                app:destination="@id/descriptionFragment"/>
    </fragment>
    <fragment
            tools:layout="@layout/fragment_description"
            android:id="@+id/descriptionFragment"
            android:name="io.agora.ng_api.ui.fragment.DescriptionFragment"
            android:label="DescriptionFragment">
        <action
                android:id="@+id/action_descriptionFragment_to_basicVideo"
                app:destination="@id/order_b_basicVideo"/>
        <action
                android:id="@+id/action_descriptionFragment_to_basicAudio"
                app:destination="@id/order_a_basicAudio"/>
        <action
                android:id="@+id/action_descriptionFragment_to_mediaPlayer"
                app:destination="@id/order_c_mediaPlayer"/>
        <action
                android:id="@+id/action_descriptionFragment_to_screenShareFragment"
                app:destination="@id/order_d_screenShareFragment" />
        <action
                android:id="@+id/action_descriptionFragment_to_simpleExtensionFragment"
                app:destination="@id/order_e_simpleExtensionFragment" />
    </fragment>

    <fragment
            tools:layout="@layout/fragment_media_player"
            android:id="@+id/order_c_mediaPlayer"
            android:name="io.agora.ng_api.ui.fragment.MediaPlayerFragment"
            android:label="@string/title_media_player">
        <argument
                android:name="@string/args_nav_type"
                app:argType="integer"
                android:defaultValue="1"/>
        <argument
            android:name="@string/args_nav_permission"
            app:argType="integer"
            android:defaultValue="0x03"/>
        <argument
                android:name="@string/args_nav_desc"
                app:argType="reference"
                android:defaultValue="@string/desc_media_player"/>
    </fragment>
    <fragment
            tools:layout="@layout/fragment_basic_video"
            android:id="@+id/order_b_basicVideo"
            android:name="io.agora.ng_api.ui.fragment.BasicVideoFragment"
            android:label="@string/title_basic_video">
        <argument
                android:name="@string/args_nav_type"
                app:argType="integer"
                android:defaultValue="0"/>
        <argument
            android:name="@string/args_nav_permission"
            app:argType="integer"
            android:defaultValue="0x03"/>
        <argument
                android:name="@string/args_nav_desc"
                app:argType="reference"
                android:defaultValue="@string/desc_basic_video"/>
    </fragment>
    <fragment
            tools:layout="@layout/fragment_basic_audio"
            android:id="@+id/order_a_basicAudio"
            android:name="io.agora.ng_api.ui.fragment.BasicAudioFragment"
            android:label="@string/title_basic_audio">
        <argument
                android:name="@string/args_nav_type"
                app:argType="integer"
                android:defaultValue="0"/>
        <argument
                android:name="@string/args_nav_permission"
                app:argType="integer"
                android:defaultValue="0x01"/>
        <argument
                android:name="@string/args_nav_desc"
                app:argType="reference"
                android:defaultValue="@string/desc_basic_audio"/>
    </fragment>
    <fragment
            android:id="@+id/order_d_screenShareFragment"
            tools:layout="@layout/fragment_screen_share"
            android:name="io.agora.ng_api.ui.fragment.ScreenShareFragment"
            android:label="@string/title_screen_share" >
        <argument
                android:name="@string/args_nav_type"
                app:argType="integer"
                android:defaultValue="1"/>
        <argument
                android:name="@string/args_nav_permission"
                app:argType="integer"
                android:defaultValue="0x03"/>
        <argument
                android:name="@string/args_nav_desc"
                app:argType="reference"
                android:defaultValue="@string/desc_screen_share"/>
    </fragment>
    <fragment
            android:id="@+id/order_e_simpleExtensionFragment"
            tools:layout="@layout/fragment_simple_extension"
            android:name="io.agora.ng_api.ui.fragment.SimpleExtensionFragment"
            android:label="@string/title_simple_extension" >
        <argument
                android:name="@string/args_nav_type"
                app:argType="integer"
                android:defaultValue="1"/>
        <argument
                android:name="@string/args_nav_permission"
                app:argType="integer"
                android:defaultValue="0x03"/>
        <argument
                android:name="@string/args_nav_desc"
                app:argType="reference"
                android:defaultValue="@string/desc_simple_extension"/>
    </fragment>
</navigation>