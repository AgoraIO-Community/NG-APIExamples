<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <io.agora.ng_api.view.DynamicView
            android:id="@+id/container_fg_simple_extension"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dynamic_fitEnd="false"
            app:dynamic_layoutStyle="scroll" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_enable_water_mark_fg_simple_extension"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:checkable="true"
            android:text="@string/water_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            android:layout_marginHorizontal="12dp" />

    <com.google.android.material.slider.Slider
            android:id="@+id/slider_fg_simple_extension"
            android:layout_marginEnd="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100" />

</androidx.constraintlayout.widget.ConstraintLayout>